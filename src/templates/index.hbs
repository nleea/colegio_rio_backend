<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>QR code </title>
    <style>
      .container { display: flex; flex-direction: row; flex-wrap: wrap; }
      .internal-container { display: flex; flex-direction: column; border: 1px
      solid lightgrey; margin: 5px; padding: 5px; } .internal-container h1 {
      border-bottom: 1px solid lightgray; }
    </style>
  </head>
  <body>
    <div class="container">
      {{#each qr}}
        <div class="internal-container">
          <h1>{{name}}</h1>
          <img src="{{link}}" />
        </div>
      {{/each}}
    </div>
  </body>
</html>